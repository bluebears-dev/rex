{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Phoenix server",
            "type": "shell",
            "command": "mix phx.server",
            "problemMatcher": [
                "$mixCompileError"
            ]
        },
        {
            "label": "Get dependencies",
            "type": "shell",
            "command": "mix deps.get",
            "problemMatcher": [
                "$mixCompileError"
            ]
        },
        {
            "label": "Ecto migrate",
            "type": "shell",
            "command": "mix ecto.migrate",
            "problemMatcher": [
                "$mixCompileError"
            ]
        },
        {
            "label": "Ecto rollback",
            "type": "shell",
            "command": "mix ecto.rollback",
            "problemMatcher": [
                "$mixCompileError"
            ]
        }
    ]
}